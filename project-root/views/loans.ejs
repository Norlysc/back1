<!DOCTYPE html>
<html>
  <head>
    <title>Loans</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>Loans</h1>

    <h2>Existing Loans</h2>
    <ul>
      <% loans.forEach(loan => { %>
      <li>
        <h3>Loan ID: <%= loan.id %></h3>
        <p>User ID: <%= loan.userId %></p>
        <p>Amount: <%= loan.amount %></p>
        <p>Interest Rate: <%= loan.interestRate %> %</p>
        <p>Next Payment Date: <%= loan.nextPaymentDate %></p>
        <form action="/api/loans/<%= loan.id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
      <% }); %>
    </ul>

    <h2>Add a New Loan</h2>
    <form action="/api/loans" method="POST">
      <label for="userId">User ID:</label>
      <input type="number" id="userId" name="userId" required />
      <label for="amount">Amount:</label>
      <input type="number" id="amount" name="amount" required />
      <label for="interestRate">Interest Rate (%):</label>
      <input
        type="number"
        step="0.01"
        id="interestRate"
        name="interestRate"
        required
      />
      <label for="nextPaymentDate">Next Payment Date:</label>
      <input type="date" id="nextPaymentDate" name="nextPaymentDate" required />
      <button type="submit">Add Loan</button>
    </form>

    <a href="/">Back to Home</a>
  </body>
</html>
